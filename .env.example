# AURORA System Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Backend Server Configuration
# ============================================================================

# Backend API URL (used by frontend)
BACKEND_URL=http://localhost:8000

# Server host and port
HOST=0.0.0.0
PORT=8000

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================================================
# Neural Oracle Configuration
# ============================================================================

# Enable or disable neural oracle
ENABLE_NEURAL_ORACLE=true

# Path to trained neural oracle model
NEURAL_MODEL_PATH=./models/neural_oracle_v1.pkl

# Confidence threshold for neural predictions
NEURAL_CONFIDENCE_THRESHOLD=0.9

# Fallback to symbolic engine if neural fails
NEURAL_FALLBACK_ENABLED=true

# ============================================================================
# Symbolic Engine Configuration
# ============================================================================

# Minimum confidence for symbolic rules
SYMBOLIC_MIN_CONFIDENCE=0.7

# Enable rule learning from user corrections
ENABLE_PATTERN_LEARNING=true

# Path to learned patterns storage
LEARNED_PATTERNS_PATH=./data/learned_patterns.json

# ============================================================================
# Feature Cache Configuration
# ============================================================================

# Enable feature caching
ENABLE_FEATURE_CACHE=true

# Cache directory
FEATURE_CACHE_DIR=./cache/features

# Maximum cache size in MB
FEATURE_CACHE_MAX_SIZE_MB=500

# Cache time-to-live in hours
FEATURE_CACHE_TTL_HOURS=24

# ============================================================================
# Privacy Configuration
# ============================================================================

# Privacy level for pattern learning (low, medium, high)
PRIVACY_LEVEL=high

# Differential privacy epsilon parameter
PRIVACY_EPSILON=1.0

# Enable anonymization for stored patterns
ENABLE_ANONYMIZATION=true

# ============================================================================
# Performance Monitoring
# ============================================================================

# Enable performance monitoring
ENABLE_MONITORING=true

# Monitoring metrics port
METRICS_PORT=9090

# Log performance metrics to file
LOG_METRICS_TO_FILE=false
METRICS_LOG_FILE=./logs/metrics.log

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/aurora.log

# Enable structured logging
STRUCTURED_LOGGING=true

# ============================================================================
# Database Configuration (if using persistent storage)
# ============================================================================

# Database URL (optional - for storing user corrections and patterns)
# DATABASE_URL=postgresql://user:password@localhost:5432/aurora

# Redis URL (optional - for distributed caching)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Security Configuration
# ============================================================================

# API key for authentication (optional)
# API_KEY=your-secret-api-key-here

# Enable CORS
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Enable rate limiting
ENABLE_RATE_LIMITING=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# Frontend Configuration
# ============================================================================

# Next.js specific (if needed)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================================================
# Development & Testing
# ============================================================================

# Enable debug mode
DEBUG=false

# Enable hot reload for development
HOT_RELOAD=true

# Test data directory
TEST_DATA_DIR=./test_data

# Synthetic data generation seed (for reproducibility)
RANDOM_SEED=42

# ============================================================================
# Advanced Features
# ============================================================================

# Enable explainability features
ENABLE_EXPLAINABILITY=true

# Explainability detail level (simple, medium, detailed)
EXPLAINABILITY_LEVEL=medium

# Enable A/B testing for recommendations
ENABLE_AB_TESTING=false

# Benchmark mode (disables some features for accurate benchmarking)
BENCHMARK_MODE=false
